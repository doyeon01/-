{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "noUnusedLocals": false, 
    "noUnusedParameters": false ,
    "moduleResolution": "node",  // Node 모듈 해석 방식
    "esModuleInterop": true,      // ES 모듈 호환성 설정
    "allowSyntheticDefaultImports": true, // 기본 내보내기 사용 가능
    "target": "ESNext",           // 최신 ECMAScript 사용
    "module": "ESNext"            // 최신 모듈 시스템 사용
  }
}
